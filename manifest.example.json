{
  "manifest_version": 3,
  "name": "AutoGMeet+",
  "description": "AutoGMeet+ for Google Calendar automatically connects you to your scheduled meetings, ensuring you never miss a call or appointment.",
  "version": "1.4",

  "permissions": ["alarms", "identity", "history", "notifications", "storage", "tabs"],
  "oauth2": {
    "client_id": "CLIENT_ID_PLACEHOLDER",
    "scopes": [
      "https://www.googleapis.com/auth/calendar"
    ]
  },

  "background": {
    "service_worker": "js/backend.js"
  },

  "action": {
    "default_popup": "main.html",
    "default_icon": "images/icon.png"
  },

  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
